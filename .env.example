# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=False
FLASK_SECRET_KEY=your-secret-key-here-change-in-production

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/tandon_legal_db
DB_NAME=tandon_legal_db
DB_USER=postgres
DB_PASSWORD=your-secure-password
DB_HOST=localhost
DB_PORT=5432

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Security Configuration
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Email Configuration (for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@tandonassociates.com

# API Keys
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret
AWS_S3_BUCKET=tandon-legal-docs

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=3600

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Sentry (Error Tracking)
SENTRY_DSN=

# Feature Flags
ENABLE_ANALYTICS=True
ENABLE_NOTIFICATIONS=True
ENABLE_FILE_UPLOAD=True
MAX_FILE_SIZE_MB=50

# Application Settings
APP_NAME=Tandon Legal Operations Dashboard
APP_VERSION=1.0.0
SUPPORT_EMAIL=support@tandonassociates.com

# Admin Settings
ADMIN_EMAIL=admin@tandonassociates.com
ADMIN_PASSWORD=change-this-in-production

# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000
